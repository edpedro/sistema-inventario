// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  username   String
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  baseWms BaseWms[]
  baseSap BaseSap[]
  baseCiclico BaseCiclico[]

  @@map("users")
}

model BaseWms{
  id         String    @id @default(uuid())
  item       String
  name        String
  description   String
  address   String
  center   String
  category   String
  balance   String
  date String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  

  user User @relation(fields: [user_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user_id String

  @@map("baseWms")
  
}

model BaseSap{
  id         String    @id @default(uuid())
  center       String
  name        String
  deposit   String
  item   String
  description   String
  balance   String
  value   String
  date String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  

  user User @relation(fields: [user_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user_id String

  @@map("baseSap")
  
}

model BaseCiclico{
  id         String    @id @default(uuid())
  item       String
  name        String
  description   String  
  deposit   String
  center   String
  balanceSap   String
  balanceWms   String  
  date String
  quantidadeContada String @default("")
  justification String @default("")
  value String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  

  user User @relation(fields: [user_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user_id String

  @@map("baseCiclico")
  
}